<html>
  <head>
    <title>vux demo</title>
    <link rel="stylesheet" href="https://vux.li/gitfile/vux.css">
    <style>
    * {margin:0;padding:0;}
    body {padding-right:5px;}
    {{data.style}}
    </style>
    <script src="https://vux.li/gitfile/examples/vue.min.1.0.18.js"></script>
    <!--components-->
    {{#each data.components}}
    <script src="https://vux.li/gitfile/components/{{tag}}/index.js"></script>
    {{/each}}
    <!--filters-->
    {{#each data.filters}}
    <script src="https://vux.li/gitfile/components/{{tag}}/index.js"></script>
    {{/each}}
  </head>
  <body>
    <div id="demo">
      {{{data.template}}}
    </div>
    <script>
    // register components
    {{#each data.components}}
      Vue.component('{{tag}}', {{umd}})
    {{/each}}

    // register filters
    {{#each data.filters}}
      Vue.filter('{{tag}}', {{umd}})
    {{/each}}

    new Vue({
      el: '#demo',
      {{{data.script}}}
    })
    </script>
  </body>
</html>
